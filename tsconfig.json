{
    "compilerOptions": {
        "module" : "UMD",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "sourceMap": true,
        "outDir": "dist",
        "target" : "ES2015",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@lib/*" : ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
    ]
}